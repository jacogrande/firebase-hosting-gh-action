{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "target": "es2017",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "paths": {
        "@/*": ["./src/*"],
        "@@/*": ["./*"]
      },
      "baseUrl": "."
    }, 
    "references": [
      {
        "path": "./tsconfig.build.json"
      }
    ],
    "exclude": ["node_modules"]
  }
